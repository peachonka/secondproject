{
  "Jwt": {
    "Secret": "your-super-secret-key-here-at-least-32-characters-long"
  },
  "ReverseProxy": {
    "Routes": {
      "user-service": {
        "ClusterId": "user-service",
        "Match": {
          "Path": "/users/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/{**catch-all}" }
        ]
      },
      "order-service": {
        "ClusterId": "order-service", 
        "Match": {
          "Path": "/orders/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "user-service": {
        "Destinations": {
          "server1": {
            "Address": "https://localhost:5001/"
          }
        }
      },
      "order-service": {
        "Destinations": {
          "server1": {
            "Address": "https://localhost:5002/"
          }
        }
      }
    }
  }
}